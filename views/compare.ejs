                                        </td>
                                    </tr>
                                    <tr>
                                        <th colspan="4" class="table-secondary">Charges patronales</th>
                                    </tr>
                                    <tr>
                                        <th scope="row">Cnss QPP</th>
                                        <td class="text-end"><%= summary.totals.fileA['Cnss QPP'].toLocaleString('fr-FR', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></td>
