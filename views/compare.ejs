<!-- Récapitulatif des écarts des données fixes -->
<h4 class="text-primary mb-3">Récapitulatif des écarts des données fixes</h4>
<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th scope="col">Rubrique</th>
                <th scope="col">Fichier prestataire paie</th>
                <th scope="col">Fichier SEGUCE</th>
                <th scope="col">Différence</th>
            </tr>
        </thead>
        <tbody>
            <% 
            // Afficher les totaux pour les colonnes fixes
            if (comparisonResult.summary.totals && comparisonResult.summary.totals.fixed) {
                comparisonResult.summary.totals.fixed
                    .sort((a, b) => a.column.localeCompare(b.column))
                    .forEach(item => {
                        const diff = item.valueA - item.valueB;
                        const hasDiff = Math.abs(diff) > 0.01; // Tolérance pour les erreurs d'arrondi
            %>
                <tr>
                    <th scope="row"><%= item.column %></th>
                    <td class="text-end"><%= item.valueA.toLocaleString('fr-FR', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></td>
                    <td class="text-end"><%= item.valueB.toLocaleString('fr-FR', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></td>
                    <td class="text-end <%= hasDiff ? 'text-danger' : '' %>">
                        <%= diff.toLocaleString('fr-FR', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
                    </td>
                </tr>
            <% }); 
            } else { %>
                <tr>
                    <td colspan="4" class="text-center">Aucun écart détecté dans les données fixes</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

