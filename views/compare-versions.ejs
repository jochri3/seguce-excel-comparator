<!DOCTYPE html>
<html lang="fr">
<head>
    <%- include('partials/header') %>
    <title><%= title %></title>
</head>
<body>
    <div class="container">
        <header class="my-4">
            <h1><%= title %></h1>
            <a href="/history/<%= sessionId %>" class="btn btn-secondary mb-3">
                <i class="bi bi-arrow-left me-2"></i>Retour à la session
            </a>
        </header>

        <div class="card shadow mb-4">
            <div class="card-header bg-info text-white">
                <h4 class="card-title mb-0">Informations de comparaison</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card mb-3">
                            <div class="card-header bg-secondary text-white">
                                <h5 class="card-title mb-0">Version 1 (v<%= file1.version %>)</h5>
                            </div>
                            <div class="card-body">
                                <p><strong>Nom du fichier:</strong> <%= file1.name %></p>
                                <p><strong>Date d'upload:</strong> <%= new Date(file1.createdAt).toLocaleString() %></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card mb-3">
                            <div class="card-header bg-primary text-white">
                                <h5 class="card-title mb-0">Version 2 (v<%= file2.version %>)</h5>
                            </div>
                            <div class="card-body">
                                <p><strong>Nom du fichier:</strong> <%= file2.name %></p>
                                <p><strong>Date d'upload:</strong> <%= new Date(file2.createdAt).toLocaleString() %></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="card-title mb-0">Différences entre les versions</h4>
            </div>
            <div class="card-body">
                <% if (differences.length > 0) { %>
                    <div class="alert alert-info mb-4">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        <strong><%= differences.length %> matricule(s)</strong> avec des différences entre la version <%= file1.version %> et la version <%= file2.version %>.
                    </div>
                    
                    <div class="accordion" id="differencesAccordion">
                        <% differences.forEach((diff, index) => { %>
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="heading<%= index %>">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= index %>" aria-expanded="false" aria-controls="collapse<%= index %>">
                                        <div class="d-flex justify-content-between w-100">
                                            <span>
                                                <% if (diff.type === 'added') { %>
                                                    <span class="badge bg-success me-2">Ajouté</span>
                                                <% } else if (diff.type === 'removed') { %>
                                                    <span class="badge bg-danger me-2">Supprimé</span>
                                                <% } else { %>
                                                    <span class="badge bg-warning me-2">Modifié</span>
                                                <% } %>
                                                <strong>Matricule: <%= diff.matricule %></strong>
                                            </span>
                                        </div>
                                    </button>
                                </h2>
                                <div id="collapse<%= index %>" class="accordion-collapse collapse" aria-labelledby="heading<%= index %>" data-bs-parent="#differencesAccordion">
                                    <div class="accordion-body">
                                        <% if (diff.type === 'added' || diff.type === 'removed') { %>
                                            <div class="alert alert-<%= diff.type === 'added' ? 'success' : 'danger' %>">
                                                <i class="bi bi-<%= diff.type === 'added' ? 'plus-circle' : 'dash-circle' %> me-2"></i>
                                                <strong><%= diff.message %></strong>
                                            </div>
                                        <% } else if (diff.type === 'modified' && diff.changes) { %>
                                            <div class="table-responsive">
                                                <table class="table table-striped table-hover">
                                                    <thead class="table-dark">
                                                        <tr>
                                                            <th>Colonne</th>
                                                            <th>Version <%= file1.version %></th>
                                                            <th>Version <%= file2.version %></th>
                                                            <th>Changement</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% diff.changes.forEach(change => { %>
                                                            <tr>
                                                                <td><strong><%= change.column %></strong></td>
                                                                <td><%= change.oldValue %></td>
                                                                <td><%= change.newValue %></td>
                                                                <td>
                                                                    <% 
                                                                    let changeText = "Modifié";
                                                                    if (typeof change.oldValue === 'number' && typeof change.newValue === 'number') {
                                                                        const difference = change.newValue - change.oldValue;
                                                                        changeText = difference > 0 ? `+${difference}` : `${difference}`;
                                                                    }
                                                                    %>
                                                                    <%= changeText %>
                                                                </td>
                                                            </tr>
                                                        <% }); %>
                                                    </tbody>
                                                </table>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="alert alert-success">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        Aucune différence n'a été détectée entre les deux versions.
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>
</body>
</html>